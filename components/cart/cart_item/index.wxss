.cart-item-container{
  /* width: 100%; */
  height: 200rpx;
  display: flex;
  border-bottom: 1rpx solid #f1f1f1;
  width: 950rpx;
  transform: translateX(0);
  transition: all 2s;
}

.citem-cont-left{
  width: 150rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.citem-cont-left .citem-cont-img{
  width: 40rpx;
  height: 40rpx;
}

.citem-cont-right{
  width: calc(100% - 150rpx);
  height: 100%;
  display: flex;
}

.citem-cont-right .cont-r-left{
  width: 200rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cont-r-left .r-left-img{
  width: 80%;
  height: 80%;
}

.cont-r-left .r-left-intr{
  width: 80%;
  height: 20%;
  font-size: 26rpx;
  color: #666666;
  text-align: center;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.citem-cont-right .cont-r-right{
  width: calc(100% - 200rpx);
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.cont-r-right .r-right-content{
  font-size: 28rpx;
  color: #333333;
  padding: 10rpx;
}

.cont-rr-btns{
  margin-right: 30rpx;
  display: flex;
  position: absolute;
  right: -5rpx;
  bottom: 0;
}

.cont-rr-btns .cont-rr-del, .cont-rr-btns .cont-rr-add{
  width: 50rpx;
  height: 50rpx;
  line-height: 40rpx;
  color: #333333;
  text-align: center;
  border: 1rpx solid #f1f1f1;
  border-radius: 5rpx;
}

.cont-rr-btns .cont-rr-num{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #333333;
  margin: 0 20rpx;
}

.item_del{
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  background-color: red;
  color: white;
}

.item_del_show{
  transform: translateX(-200rpx);
}
