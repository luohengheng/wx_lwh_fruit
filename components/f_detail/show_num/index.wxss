.show_num_container{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .6);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.sn_bottom{
  width: 100%;
  height: 300rpx;
  background-color: white;
}

.sn_bottom .sn_bot_content{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.sn_bot_content .bot_cont_left{
  color: red;
  font-size: 28rpx;
  margin-left: 30rpx;
}

.sn_bot_content .bot_cont_right{
  margin-right: 30rpx;
  display: flex;
}

.bot_cont_right .cont_r_bt1, .bot_cont_right .cont_r_bt2{
  width: 50rpx;
  height: 50rpx;
  line-height: 40rpx;
  color: #333333;
  text-align: center;
  border: 1rpx solid #f1f1f1;
  border-radius: 5rpx;
}

.bot_cont_right .cont_r_text{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #333333;
  margin: 0 20rpx;
}

.sn_bottom .sn_bot_btn{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  background-color: red;
}

.sn_bottom .bot_cont_close{
  position: absolute;
  right: 10rpx;
  top: 5rpx;
  width: 50rpx;
  height: 50rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  text-align: center;
  color: #333333;
}