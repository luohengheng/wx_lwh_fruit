.fdetail_container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}

.fdetail_container .fdetail_cont_img{
  width: 100%;
  height: 700rpx;
}

.fdetail_container .fdetail_cont_content{
  width: 100%;
  padding: 30rpx 20rpx;
  font-size: 28rpx;
  color: #333333;
  background-color: #f9f9f9;
}

.fdetail_cont_price{
  width: 100%;
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
}

.fd_price_cur{
  font-size: 28rpx;
  color: red;
}

.fd_price_total{
  font-size: 24rpx;
  color: #666666;
  text-decoration: line-through;
  margin-left: 30rpx;
}

.l-fdetail-show{
  position: absolute;
  z-index: 10;
  width: 100%;
  height: 100%;
}

.fdetail_cont_buts{
  width: 100%;
  height: 100rpx;
  display: flex;
  position: absolute;
  bottom: 0;
}

.fdetail_cont_toBuy{
  flex: 1;
  position: relative;
  border-top: 1px solid #f1f1f1;
}

.fdetail_cont_toBuy .cont_toBuy_icon{
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx 0 0 calc(50% - 30rpx);
}

.fdetail_cont_toBuy .cont_toBuy_num{
  font-size: 28rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  position: absolute;
  top: 14rpx;
  right: 144rpx;
  color: white;
  background-color: red;
  border-radius: 50%;
}

.fdetail_cont_buy{
  flex: 1;
  line-height: 100rpx;
  text-align: center;
  color: white;
  background-color: red;
}
